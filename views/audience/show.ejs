<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Audience Segment Details</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
        margin: 0;
        padding: 0;
      }

      h1 {
        text-align: center;
        margin-top: 30px;
        color: #4caf50;
      }

      h2 {
        color: #555;
      }

      table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
      }

      th,
      td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
      }

      th {
        background-color: #f2f2f2;
      }

      tbody tr:hover {
        background-color: #f1f1f1;
      }

      .back-link {
        display: block;
        width: 200px;
        margin: 20px auto;
        text-align: center;
        background-color: #4caf50;
        color: #fff;
        padding: 10px;
        text-decoration: none;
        border-radius: 4px;
      }

      .back-link:hover {
        background-color: #45a049;
      }

      .segment-info {
        text-align: center;
        margin: 20px;
        font-size: 18px;
      }
    </style>
  </head>
  <body>
    <h1>Audience Segment: <%= audience.name %></h1>

    <div class="segment-info">
      <p><strong>Audience Size:</strong> <%= audience.size %></p>
    </div>

    <h3>Conditions</h3>
    <table>
      <thead>
        <tr>
          <th>Field</th>
          <th>Operator</th>
          <th>Value</th>
          <th>Logic</th>
        </tr>
      </thead>
      <tbody>
        <% audience.conditions.forEach(condition => { %>
        <tr>
          <td><%= condition.field %></td>
          <td><%= condition.operator %></td>
          <td><%= condition.value %></td>
          <td><%= condition.logic %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <h3>Customers in Segment</h3>
    <% if (customers && customers.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% customers.forEach(customer => { %>
        <tr>
          <td><%= customer.name %></td>
          <td><%= customer.email %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } else { %>
    <p>No customers found in this segment.</p>
    <% } %>
    <a href="/audience" class="back-link">Back to Audience List</a>
  </body>
</html>
